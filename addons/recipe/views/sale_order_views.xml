<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add recipe_ids field to sale order line form view -->
        <record id="view_sale_order_line_form_recipe" model="ir.ui.view">
            <field name="name">sale.order.line.form.recipe</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <field name="recipe_ids" widget="many2many_tags" 
                           options="{'color_field': 'color', 'no_create_edit': True}"
                           placeholder="Select recipes for this order line"/>
                </xpath>
            </field>
        </record>

        <!-- Add recipe_ids field to sale order line tree view -->
        <record id="view_sale_order_line_tree_recipe" model="ir.ui.view">
            <field name="name">sale.order.line.tree.recipe</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <field name="recipe_ids" widget="many2many_tags" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Note: caterer_list_id view is created dynamically in post_init_hook 
             to avoid errors when caterer module is not installed -->
    </data>
</odoo>

